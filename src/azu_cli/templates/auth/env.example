# Authentication Configuration
# Copy this file to .env and configure your values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-different
JWT_ISSUER=your-app-api
JWT_AUDIENCE=your-app-client

# Authly Configuration (if using Authly)
AUTHLY_SECRET_KEY=your-authly-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/your_database

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-app.com

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin123!

# OAuth Provider Configuration (if enabled)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Security Configuration
BCRYPT_COST=14
SESSION_SECRET=your-session-secret-key-here

# Application Configuration
APP_ENV=development
APP_HOST=localhost
APP_PORT=3000

# Email Configuration (for user confirmation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@your-app.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-app.com/csp-report
