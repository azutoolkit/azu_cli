{% extends "layout.jinja" %}

{% block page_header %}
<title>Welcome to {{ project.camelcase }} - Azu App</title>
<meta name="description" content="Welcome to your new Azu application">
{{ csrf_metatag }}
{% endblock %}

{% block page_body %}
<div class="container-lg py-4">
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="text-center">
        <h1 class="h1 mb-3">
          <i class="bi bi-gem me-3"></i>
          Welcome to {{ project.camelcase }}
        </h1>
        <p class="lead text-muted">
          Your new Azu application is ready to go!
        </p>
      </div>
    </div>
  </div>

  <!-- Welcome Cards -->
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card border-secondary h-100">
        <div class="card-body text-center">
          <i class="bi bi-lightning-charge display-4 text-primary mb-3"></i>
          <h5 class="card-title">Fast & Efficient</h5>
          <p class="card-text">Built with Crystal for maximum performance and type safety.</p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card border-secondary h-100">
        <div class="card-body text-center">
          <i class="bi bi-shield-check display-4 text-success mb-3"></i>
          <h5 class="card-title">Type Safe</h5>
          <p class="card-text">Compile-time guarantees ensure your code is robust and reliable.</p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card border-secondary h-100">
        <div class="card-body text-center">
          <i class="bi bi-gear display-4 text-info mb-3"></i>
          <h5 class="card-title">Easy to Use</h5>
          <p class="card-text">Simple, intuitive API that makes development a pleasure.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Getting Started -->
  <div class="row">
    <div class="col-12">
      <div class="card border-secondary">
        <div class="card-header border-secondary">
          <h5 class="mb-0">
            <i class="bi bi-rocket me-2"></i>
            Getting Started
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6>Next Steps:</h6>
              <ul class="list-unstyled">
                <li class="mb-2">
                  <i class="bi bi-check-circle text-success me-2"></i>
                  Create your first model
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle text-success me-2"></i>
                  Generate endpoints and views
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle text-success me-2"></i>
                  Set up your database
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle text-success me-2"></i>
                  Start building your features
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6>Useful Commands:</h6>
              <div class="bg-light p-3 rounded">
                <code class="text-dark">
                  $ azu generate model User<br>
                  $ azu generate scaffold Post<br>
                  $ azu db migrate<br>
                  $ crystal run src/server.cr
                </code>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Documentation Links -->
  <div class="row mt-4">
    <div class="col-12 text-center">
      <div class="btn-group" role="group">
        <a href="https://azutoolkit.org" class="btn btn-outline-primary">
          <i class="bi bi-book me-2"></i>
          Documentation
        </a>
        <a href="https://github.com/azutoolkit/azu" class="btn btn-outline-secondary">
          <i class="bi bi-github me-2"></i>
          GitHub
        </a>
        <a href="https://crystal-lang.org" class="btn btn-outline-info">
          <i class="bi bi-gem me-2"></i>
          Crystal Lang
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
